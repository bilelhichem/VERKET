<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Paretenaire.addProduct"
    android:background="@color/white"
    android:padding="10dp"

    >


    <LinearLayout
        android:id="@+id/liprod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/uplimage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/tex"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_image_24">

        </ImageView>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="8dp"
            android:hint="Name de Produit"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gris" />


        <androidx.appcompat.widget.AppCompatEditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="8dp"
            android:hint="Description de Produit"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gris" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="8dp"
            android:hint="Prix de Produit"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gris" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="8dp"
            android:hint="Quantite de Produit"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gris" />

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Categorie">

            <AutoCompleteTextView
                android:padding="20dp"

                android:id="@+id/editTextCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
                android:drawableRight="@drawable/baseline_arrow_drop_down_24"
                android:drawablePadding="8dp"
                android:focusable="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="8dp"
            android:hint="Code  de Promo"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gris" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="8dp"
            android:hint="Pourcentage de promo"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gris" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registervend"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/up2"
            android:layout_marginTop="10dp"

            android:backgroundTint="@color/verket"
            android:text="Confirme"
            android:textColor="@color/white"


            ></androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>