<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Paretenaire.DevenirPareten"
    android:padding="20dp"
   android:background="@color/white"
    >


    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/producteur"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bakbtn"
            android:fontFamily="@font/inter"
            android:text="je suis producteur artisana"
            android:textAlignment="center"
            android:textStyle="bold"

            >

        </androidx.appcompat.widget.AppCompatButton>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/affiliateur"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/bakbtn2"
            android:fontFamily="@font/inter"
            android:text="je suis producteur artisana"
            android:textAlignment="center"
            android:textStyle="bold"

            >

        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/liprod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">


        <ImageView
            android:id="@+id/uplimage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/baseline_image_24"
            android:layout_below="@+id/tex"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            >

        </ImageView>
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/baseline_people_24"
            android:drawablePadding="8dp"
            android:hint="nom"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gris" />


        <androidx.appcompat.widget.AppCompatEditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/baseline_people_24"
            android:drawablePadding="8dp"
            android:hint="prenom"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gris" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/baseline_email_24"
            android:drawablePadding="8dp"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gris" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/baseline_local_phone_24"
            android:drawablePadding="8dp"
            android:hint="Numero de Telephone"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gris" />

        <ImageView
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:id="@+id/upcartnat"

            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/baseline_cloud_upload_24">

        </ImageView>

        <TextView

            android:layout_centerHorizontal="true"
            android:id="@+id/up2"
            android:layout_below="@id/upcartnat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text=" Upload YOUR CARTE NATIONAL"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.053" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_below="@id/up2"
            android:id="@+id/addpr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"

            android:backgroundTint="@color/verket"
            android:text="Confirme"
            android:textColor="@color/white"


            >
        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>